<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:id="@+id/relative1"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frametxt"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/eqn"
                android:gravity="right"
                android:textSize="25dp"
                android:textColor="#ebebeb" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:id="@+id/edt1"
                android:gravity="bottom|right"
                android:layout_below="@+id/eqn"
                android:layout_margin="0dp"
                android:textSize="35dp"
                android:padding="0dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Layoutcal"
    android:layout_below="@id/frametxt">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout789"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="7"
                android:id="@+id/button7"
                android:background="@color/pad"
                android:layout_weight="1"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="8"
                android:id="@+id/button8"
                android:background="@color/pad"
                android:layout_weight="1"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="9"
                android:id="@+id/button9"
                android:background="@color/pad"
                android:layout_weight="1"
                android:textSize="25dp" />

            <ImageButton
                style="?android:attr/buttonStyleSmall"
                android:layout_width="84dp"
                android:layout_height="90dp"
                android:id="@+id/buttondel"
                android:background="@color/delc"
                android:textSize="25dp"
                android:src="@drawable/del" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="C"
                android:id="@+id/buttonC"
                android:background="@color/delc"
                android:layout_weight="1"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout456"
            android:orientation="horizontal"
            android:alpha="100"
            android:layout_below="@+id/linearLayout789"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="4"
                android:id="@+id/button4"
                android:layout_weight="1"
                android:background="@color/pad"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="5"
                android:id="@+id/button5"
                android:layout_weight="1"
                android:background="@color/pad"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="6"
                android:id="@+id/button6"
                android:layout_weight="1"
                android:background="@color/pad"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="+"
                android:id="@+id/buttonadd"
                android:layout_weight="1"
                android:background="@color/op"
                android:textSize="25dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="-"
                android:id="@+id/buttonsub"
                android:layout_weight="1"
                android:background="@color/op"
                android:textSize="25dp" />
        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout123"
        android:orientation="horizontal"
        android:alpha="100"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/linearLayout456"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="1"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:background="@color/pad"
            android:textSize="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="@color/pad"
            android:textSize="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:background="@color/pad"
            android:textSize="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="*"
            android:id="@+id/buttonmul"
            android:layout_weight="1"
            android:background="@color/op"
            android:textSize="25dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="/"
            android:id="@+id/buttondiv"
            android:layout_weight="1"
            android:background="@color/op"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout0"
        android:alpha="100"
        android:layout_below="@+id/linearLayout123"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="X² √ &#10;½  ±"
        android:id="@+id/buttonsci"
        android:background="#f6f5f5"
        android:layout_weight="0.89"
        android:textSize="23dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:id="@+id/button0"
        android:layout_weight="1"
        android:background="@color/pad"
        android:textSize="25dp"
        android:text="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="."
        android:id="@+id/buttonDec"
        android:layout_weight="1"
        android:background="@color/pad"
        android:textSize="25dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/buttoneql"
        android:layout_weight="3.47"
        android:background="@color/op"
        android:textSize="25dp" />
</LinearLayout>
</LinearLayout>

        <!-- btnsci cal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/Layoutsci"
            android:layout_below="@+id/frametxt"
            android:visibility="gone"
            >
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutsin"
                android:orientation="horizontal"
                android:paddingTop="4dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="Sin"
                    android:id="@+id/buttonSin"
                    android:background="@color/pad"
                    android:layout_weight="1"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="Cos"
                    android:id="@+id/buttonCos"
                    android:background="@color/pad"
                    android:layout_weight="1"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="Tan"
                    android:id="@+id/buttonTan"
                    android:background="@color/pad"
                    android:layout_weight="1"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="Log"
                    android:id="@+id/buttonLog"
                    android:background="@color/pad"
                    android:layout_weight="1"
                    android:textSize="25dp" />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutsq"
                android:alpha="100"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="x²"
                    android:id="@+id/buttonSqr"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="√"
                    android:id="@+id/buttonSqrt"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="x³"
                    android:id="@+id/buttonCube"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="Xⁿ"
                    android:id="@+id/buttonPow"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutsign"
                android:orientation="horizontal"
                android:alpha="100">


                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="±"
                    android:id="@+id/buttonSign"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="1/x"
                    android:id="@+id/buttonInv"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="!"
                    android:id="@+id/buttonFact"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="π"
                    android:id="@+id/buttonPi"
                    android:layout_weight="1"
                    android:background="@color/op"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutn"
                android:orientation="horizontal"
                android:alpha="100"
                android:layout_below="@+id/linearLayout4">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+  -&#10;*  ÷"
                    android:layout_weight="1"
                    android:background="#f6f5f5"
                    android:textSize="23dp"
                    android:id="@+id/buttoncal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="½"
                    android:id="@+id/buttonHalf"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="¼"
                    android:id="@+id/buttonnQuar"
                    android:layout_weight="1"
                    android:background="@color/pad"
                    android:textSize="25dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:text="¾"
                    android:id="@+id/buttonnTquar"
                    android:layout_weight="1"
                    android:background="@color/op"
                    android:textSize="25dp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>



    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>
